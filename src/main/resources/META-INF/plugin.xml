    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <!--    <depends>JavaScript</depends>-->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
<!--    <depends>JavaScript</depends>-->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <notificationGroup id="Json2ts info"
                           displayType="BALLOON"
                           key="Json2ts.info"/>
        <notificationGroup id="Json2ts toast"
                           displayType="BALLOON"
                           key="Json2ts.toast"/>
        <notificationGroup id="Json2ts error"
                           displayType="BALLOON"
                           key="Json2ts.error"/>

        <applicationService serviceImplementation="com.json2ts.state.NotificationOnFirstRun"/>
        <postStartupActivity implementation="com.json2ts.activity.StartupActivity"/>
    </extensions>
    <actions>
        <!-- Add your actions here -->

        <action icon="Icons.pluginIcon" id="Json2ts" class="com.json2ts.actions.Json2ts" text="Json2ts" description="Json2ts">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action icon="Icons.pluginIcon" id="com.json2ts.actions.Json2tsFile" class="com.json2ts.actions.Json2tsFile" text="Convert Json to Ts">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
